{
  "title": "schedule (permant part)",
  "id": "schemas/schedule/schedule_p",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.joc.model.schedule.ScheduleP",
  "type": "object",
  "required": [
    "surveyDate",
    "path",
    "name",
    "usedByOrders",
    "usedByJobs"
  ],
  "properties": {
    "surveyDate": {
      "$ref": "../common/surveyDate_p-schema.json"
    },
    "path": {
      "$ref": "../common/path-schema.json"
    },
    "name": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "substitute": {
      "$ref": "substitute-schema.json"
    },
    "substitutedBy": {
      "type" : "array",
      "items" : {
        "$ref": "substitute-schema.json"
      }
    },
    "usedByOrders": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "jobChain": {
            "$ref": "../common/path-schema.json"
          },
          "orderId": {
            "type": "string"
          }
        }
      }
    },
    "usedByJobs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "job": {
            "$ref": "../common/path-schema.json"
          }
        }
      }
    },
    "configurationDate": {
      "$ref": "../common/timestamp-schema.json"
    },
    "documentation": {
      "$ref": "../common/path-schema.json"
    }
  }
}
