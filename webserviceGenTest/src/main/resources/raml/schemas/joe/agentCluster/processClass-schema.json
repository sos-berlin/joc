{
  "title": "processClass configuration",
  "id": "schemas/joe/agentCluster/processClass",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.joc.model.joe.processClass.ProcessClass",
  "javaInterfaces" : [
    "com.sos.joc.model.joe.common.IJSObject"
  ],
  "xmlElement": "process_class",
  "type": "object",
  "required": [
    "maxProcesses"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "maxProcesses": {
      "$ref": "../../common/nonNegativeInteger-schema.json"
    },
    "timeout": {
      "$ref": "../../common/nonNegativeInteger-schema.json"
    },
    "remoteScheduler": {
      "type": "string"
    },
    "remoteSchedulers": {
      "xmlElement": "remote_schedulers",
      "type": "object",
      "javaType": "com.sos.joc.model.processClass.RemoteSchedulers",
      "required": [
        "list"
      ],
      "properties": {
        "select": {
          "description": "first, next",
          "type": "string"
        },
        "list": {
          "type": "array",
          
          "xmlElement": "remote_scheduler",
          "items": {
            "javaType": "com.sos.joc.model.processClass.RemoteScheduler",
            "type": "object",
            "required": [
              "remoteScheduler"
            ],
            "properties": {
              "remoteScheduler": {
                "type": "string"
              },
              "httpHeartbeatTimeout": {
                "$ref": "../../common/nonNegativeInteger-schema.json" 
              },
              "httpHeartbeatPeriod": {
                "$ref": "../../common/nonNegativeInteger-schema.json" 
              }
            }
          }
        }
      }
    }
  }
}
