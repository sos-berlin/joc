{
  "title": "processClass configuration",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.joc.model.processClass.Configuration",
  "xmlElement": "process_class",
  "type": "object",
  "required": [
    "maxProcesses"
  ],
  "properties": {
    "name": {
      "$ref": "../common/string255-schema.json"
    },
    "maxProcesses": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "timeout": {
      "$ref": "../common/nonNegativeInteger-schema.json"
    },
    "remoteScheduler": {
      "$ref": "../common/string255-schema.json"
    },
    "remoteSchedulers": {
      "xmlElement": "remote_schedulers",
      "type": "object",
      "javaType": "com.sos.joc.model.processClass.RemoteSchedulers",
      "required": [
        "list"
      ],
      "properties": {
        "select": {
          "description": "first, next",
          "type": "string",
          "pattern": "^(first|next)$"
        },
        "list": {
          "type": "array",
          "xmlElement": "remote_scheduler",
          "items": {
            "javaType": "com.sos.joc.model.processClass.RemoteScheduler",
            "type": "object",
            "required": [
              "remoteScheduler"
            ],
            "properties": {
              "remoteScheduler": {
                "$ref": "../common/string255-schema.json"
              },
              "httpHeartbeatTimeout": {
                "$ref": "../common/nonNegativeInteger-schema.json" 
              },
              "httpHeartbeatPeriod": {
                "$ref": "../common/nonNegativeInteger-schema.json" 
              }
            }
          }
        }
      }
    }
  }
}
