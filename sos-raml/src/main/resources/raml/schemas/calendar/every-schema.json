{
  "title": "every",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "javaType": "com.sos.joc.model.calendar.Repetition",
  "type": "object",
  "required": [
    "repetition"
  ],
  "properties": {
    "from": {
      "$ref": "../common/date-schema.json"
    },
    "to": {
      "$ref": "../common/date-schema.json"
    },
    "repetition": {
      "javaType": "com.sos.joc.model.calendar.RepetitionText",
      "type": "string",
      "enum": [
        "DAILY",
        "WEEKLY",
        "MONTHLY",
        "YEARLY"
      ]
    },
    "step": {
      "type": "integer",
	  "minimum": 1,
	  "default": 1
    }
  }
}
